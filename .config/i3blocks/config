# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

[volume]
#label=VOLUME
label=â™ª
instance=Master
#instance=PCM
command=/usr/share/i3blocks/volume
interval=once
signal=10

[memory]
label=MEM
command=/usr/share/i3blocks/memory
separator=false
interval=30

[swap]
label=SWAP
instance=swap
command=/usr/share/i3blocks/memory
interval=30

[disk-slash]
label=SLASH
instance=/
command=/usr/share/i3blocks/disk
interval=30

[disk-home]
label=HOME
instance=/home/xavier
command=/usr/share/i3blocks/disk
interval=30

[battery]
command=/usr/share/i3blocks/battery
interval=30

[wireless]
label=W
instance=wlp1s0
command=/usr/share/i3blocks/network
color=#00FF00
interval=10

[bw]
label=bw
instance=wlp1s0
command=/usr/share/i3blocks/bandwidth
color=#00FF00
interval=3

[temperature]
label=TEMP
command=/usr/share/i3blocks/temperature
interval=5
#min_width=CPU: 100.00%


[cpu]
label=CPU
command=/usr/share/i3blocks/cpu_usage
interval=5
min_width=CPU: 100.00%
#separator=false

#[load]
#command=/usr/share/i3blocks/load_average
#interval=10

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=5
